                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewEntryActivity" />
        </activity>
        <activity android:name=".AllEntriesActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity android:name=".TimelineActivity" />
        <activity android:name=".TagsViewActivity" >
            <intent-filter>
                <action android:name="org.x.cassini.DB_UPDATE"></action>
            </intent-filter>
        </activity>
        <activity android:name=".TimelinePreviewActivity" />
        <activity android:name=".EditTempActivity" />
        <activity android:name=".TagEntriesActivity" />
        <activity android:name=".EditDimensionActivity" />
        <activity android:name=".SettingsActivity"></activity>
