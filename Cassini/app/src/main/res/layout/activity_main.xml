<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/mainpage_relative_layout"
    tools:context="org.x.cassini.MainActivity">


    <TextView
        android:id="@+id/main_all_entries"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="All Entries"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/main_timeline_view"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="Timeline View"
        android:textSize="14dp"
        android:layout_below="@+id/main_all_entries"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/main_tags"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="Tags"
        android:textSize="14dp"
        android:layout_below="@+id/main_timeline_view"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/main_starred"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="Starred"
        android:textSize="14dp"
        android:layout_below="@+id/main_tags"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/main_stories"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="Stories"
        android:textSize="14dp"
        android:layout_below="@+id/main_starred"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/main_settings"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_stories"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="Settings"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/main_all_entries_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:padding="22px"
        android:visibility="visible"
        app:srcCompat="@drawable/listview"
        android:layout_alignTop="@+id/main_all_entries"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/main_timeline_view_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_all_entries"
        android:padding="22px"
        android:visibility="visible"
        app:srcCompat="@drawable/timelineview" />

    <ImageView
        android:id="@+id/main_tags_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_timeline_view"
        android:padding="23px"
        android:visibility="visible"
        app:srcCompat="@drawable/tag" />

    <ImageView
        android:id="@+id/main_starred_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_tags"
        android:padding="22px"
        android:visibility="visible"
        app:srcCompat="@drawable/star_empty" />

    <ImageView
        android:id="@+id/main_stories_icon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_starred"
        android:padding="22px"
        android:visibility="visible"
        app:srcCompat="@drawable/story" />

    <ImageView
        android:id="@+id/main_settings"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_stories"
        android:padding="23px"
        android:visibility="visible"
        app:srcCompat="@drawable/setting" />

    <ImageView
        android:id="@+id/main_goTo6"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_stories"
        android:padding="20px"
        android:visibility="visible"
        app:srcCompat="@drawable/goTo" />

    <ImageView
        android:id="@+id/main_goTo5"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_starred"
        android:padding="20px"
        android:visibility="visible"
        app:srcCompat="@drawable/goTo" />

    <ImageView
        android:id="@+id/main_goTo4"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_tags"
        android:padding="20px"
        android:visibility="visible"
        app:srcCompat="@drawable/goTo" />

    <ImageView
        android:id="@+id/main_goTo3"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_timeline_view"
        android:padding="20px"
        android:visibility="visible"
        app:srcCompat="@drawable/goTo" />

    <ImageView
        android:id="@+id/main_goTo2"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/main_all_entries"
        android:padding="20px"
        android:visibility="visible"
        app:srcCompat="@drawable/goTo" />

    <ImageView
        android:id="@+id/main_goTo1"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/main_all_entries"
        android:padding="20px"
        android:visibility="visible"
        app:srcCompat="@drawable/goTo" />

    <TextView
        android:id="@+id/main_new_entry"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="+"
        android:textSize="100dp"
        android:gravity="center"
        android:background="#edf0f4"
        android:layout_below="@+id/main_settings"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Stories"
        android:gravity="center"
        android:fontFamily="cursive"
        android:textSize="24dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/main_all_entries_icon" />

</RelativeLayout>
