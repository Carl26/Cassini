                <!--android:checked="false"-->
                <!--android:text="What have I learnt today?"-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:textSize="18sp"-->
                <!--android:id="@+id/timeline_rb_learnt"-->
                <!--android:layout_margin="5dp"/>-->

            <!--<RadioButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:checked="false"-->
                <!--android:text="What problem did I face today ?"-->
                <!--android:fontFamily="sans-serif-light"-->
                <!--android:textSize="18sp"-->
                <!--android:id="@+id/timeline_rb_problem"-->
                <!--android:layout_margin="5dp"/>-->
        </RadioGroup>
    </ScrollView>
</RelativeLayout>