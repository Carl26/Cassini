<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_toolbar"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/timeline_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/timeline_view"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/timeline_toolbar_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:text="@string/confirm_button"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/timeline_date_relative_layout"
        android:layout_below="@id/timeline_toolbar"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:id="@+id/timeline_textview_from"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeline_from_date"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:text="@string/select_date"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/timeline_textview_from"
            android:layout_marginStart="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:id="@+id/timeline_textview_to"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_below="@+id/timeline_textview_from"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeline_to_date"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:text="@string/select_date"
            android:layout_below="@+id/timeline_from_date"
            android:layout_alignStart="@+id/timeline_from_date"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@color/colorDividerGray"
        android:id="@+id/timeline_divider"
        android:layout_below="@id/timeline_date_relative_layout"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/timeline_radio_group_horizontal"
        android:layout_below="@id/timeline_divider"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:id="@+id/timeline_rb_weather"
            android:drawableRight="@drawable/ic_cloud_filed"
            android:layout_margin="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:id="@+id/timeline_rb_emotion"
            android:drawableRight="@drawable/ic_happy"
            android:layout_margin="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:id="@+id/timeline_rb_exercise"
            android:drawableRight="@drawable/ic_exercise_filled"
            android:layout_margin="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:id="@+id/timeline_rb_tag"
            android:drawableRight="@drawable/ic_tag_filled"
            android:layout_margin="10dp"/>
    </RadioGroup>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_scroll_view"
        android:layout_below="@id/timeline_radio_group_horizontal"
        android:layout_alignStart="@id/timeline_radio_group_horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:id="@+id/timeline_radio_group_vertical">

            <!--<RadioButton-->
