<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/all_entries_list_main_text" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/all_entries_list_main_text"
        android:layout_alignStart="@+id/all_entries_list_main_text"
        android:id="@+id/all_entries_list_left">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/all_entries_list_location"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/all_entries_list_tags"
            android:orientation="horizontal"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/all_entries_list_left"
        android:layout_toEndOf="@+id/all_entries_list_main_text"
        android:id="@+id/all_entries_list_time"
        android:textColor="@color/black"/>
</RelativeLayout>