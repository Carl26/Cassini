<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rectangle"
    android:backgroundTint="@color/colorPrimary"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        app:layout_widthPercent = "85%"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:gravity="start"
        android:fontFamily="sans-serif-light"
        android:id="@+id/all_entries_list_main_text"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        app:layout_widthPercent="85%"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/all_entries_list_main_text"
        android:layout_alignStart="@id/all_entries_list_main_text"
        android:id="@+id/all_entries_list_left">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/all_entries_list_location"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="10sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#58B2DC"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/all_entries_list_tags"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <RelativeLayout
        app:layout_widthPercent="15%"
        android:layout_height="match_parent"
        android:id="@+id/all_entries_list_time"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/all_entries_list_left"
        android:layout_toEndOf="@id/all_entries_list_main_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/all_entries_list_time_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/all_entries_list_time_month"
            android:layout_below="@id/all_entries_list_time_date"
            android:text="May"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>

    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>