<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_entry_toolbar"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/new_entry_toolbar"
        android:id="@+id/new_entry_info">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_entry_time"
            android:gravity="start"
            android:text="time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_entry_location"
            android:layout_gravity="end"
            android:text="location"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_entry_buttons"
        android:layout_below="@+id/new_entry_info">
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/new_entry_weather"
            android:text="weather"
            android:textSize="5sp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/new_entry_emotion"
            android:text="emotion"
            android:textSize="5sp"
            android:layout_below="@id/new_entry_weather"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/new_entry_star"
            android:text="star"
            android:textSize="5sp"
            android:layout_below="@id/new_entry_emotion"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/new_entry_tag"
            android:text="tag"
            android:textSize="5sp"
            android:layout_below="@id/new_entry_star"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/new_entry_buttons">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the scroll view"/>
    </ScrollView>
</RelativeLayout>