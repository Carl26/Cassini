<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button_3</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@string/default_font</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@string/default_font</item>
    </style>

    <style name="RobotoEditTextStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@string/default_font</item>
    </style>


    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/gray</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>






    <style name="MonoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:editTextStyle">@style/MonoEditTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button_3</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="MonoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="MonoEditTextStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">monospace</item>
    </style>


    <style name="rThinTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:editTextStyle">@style/rThinEditTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_button_3</item>
        <item name="android:textViewStyle">@style/rThinTextViewStyle</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="rThinTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="rThinEditTextStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>


</resources>
